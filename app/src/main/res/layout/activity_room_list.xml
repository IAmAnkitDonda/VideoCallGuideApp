<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomListActivity">

    <TextView
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/primary"
        android:gravity="center"
        android:text="Rooms"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <ScrollView
        android:layout_above="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="centerCrop"
                android:src="@drawable/third_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/room1_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="18sp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/room1" />

                <ImageView
                    android:id="@+id/room2_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="18sp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/room2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/room3_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="18sp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/room3" />

                <ImageView
                    android:id="@+id/room4_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="18sp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/room4" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ad"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/ad_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/background_ad"
            android:gravity="center_horizontal"
            android:padding="8dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Advertisement -" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>