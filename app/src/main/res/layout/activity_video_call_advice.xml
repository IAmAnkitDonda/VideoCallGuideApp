<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VideoCallAdviceActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/primary"
        android:gravity="center"
        android:text="Video Call Advice"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/girl_1_btn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12sp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/girl_1" />

            <ImageButton
                android:id="@+id/girl_2_btn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12sp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/girl_2" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:id="@+id/ad_container"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/background_ad"
                    android:gravity="center_horizontal">


                    <TextView
                        android:text="- Advertisement -"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/girl_3_btn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12sp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/girl_3" />

            <ImageButton
                android:id="@+id/girl_4_btn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12sp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/girl_4" />

            <ImageButton
                android:id="@+id/girl_5_btn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12sp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/girl_5" />

            <ImageButton
                android:id="@+id/girl_6_btn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12sp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/girl_6" />

            <ImageButton
                android:id="@+id/girl_7_btn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12sp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/girl_7" />

            <ImageButton
                android:id="@+id/girl_8_btn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12sp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/girl_8" />

            <ImageButton
                android:id="@+id/girl_9_btn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12sp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/girl_9" />

            <ImageButton
                android:id="@+id/girl_10_btn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12sp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/girl_10" />

            <ImageButton
                android:id="@+id/girl_11_btn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12sp"
                android:layout_marginBottom="40sp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/girl_11" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>