<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateVideoCallActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/primary"
        android:gravity="center"
        android:text="Create Video Call"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/add_contact_btn"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20sp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/add_contact" />

            <ImageButton
                android:id="@+id/schedual_video_call_btn"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20sp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/schedual_call" />

            <ImageButton
                android:id="@+id/instant_video_call_btn"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20sp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/instant_call" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:id="@+id/ad_container"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/background_ad"
                    android:gravity="center_horizontal">


                    <TextView
                        android:text="- Advertisement -"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>


</LinearLayout>