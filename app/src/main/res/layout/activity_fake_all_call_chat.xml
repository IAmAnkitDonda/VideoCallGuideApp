<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".FakeAllCallChatActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/third_bg" />

        <ImageButton
            android:id="@+id/video_call_advice_btn"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginHorizontal="20dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/video_call_advice" />


        <ImageButton
            android:id="@+id/random_video_call_btn"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginHorizontal="20dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/random_video_call" />

        <ImageButton
            android:id="@+id/create_fake_video_call_btn"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginHorizontal="20dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/create_call" />

        <ImageButton
            android:id="@+id/chating_with_girl_btn"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginHorizontal="20dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/chating_with_girl" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <RelativeLayout
                android:id="@+id/ad_container"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_ad"
                android:gravity="center_horizontal">


                <TextView
                    android:text="- Advertisement -"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>